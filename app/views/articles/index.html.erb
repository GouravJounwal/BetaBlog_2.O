<h2>All articles</h2>

<table>
<thead>
<tr>
<th>Title</th>
<th>Discreption</th>
<th>Actions</th>
</tr>
</thead>

<tbody>
<% @article.each do |article| %>
    <tr>
        <td><%= article.title %> </td>
        <td><%= article.discription %> </td>
        <td><%= link_to "Show", article %> </td>
        <td><%= link_to "Edit", edit_article_path(article) %></td>
       <td><%= button_to "Delete", article_path(article), method: :delete , data: {confirm: "are you sure?"} %></td>
    </tr>
<% end %>
</tbody>

</table>
<p>
    <%= link_to "crearte New article", new_article_path %>
